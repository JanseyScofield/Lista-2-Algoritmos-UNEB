/*Fa√ßa um algoritmo que leia 3 valores v1, v2 e v3 e coloque-os em ordem
crescente, de forma que contenha o menor, v2 contenha o elemento do meio
(nem o maior, nem o menor), e v3 contenha o maior. Escreva os valores
ordenados. */


#include <stdio.h>

int main(){
    int v1, v2, v3, v11, v22, v33;
    printf("Digite o primeiro valor: ");
    scanf("%d", &v11);
    printf("Digite o segundo valor: ");
    scanf("%d", &v22);
    printf("Digite o terceiro valor: ");
    scanf("%d", &v33);
    	if(v11 < v22 && v22 < v33){
    		v1 = v11;
    		v2 = v22;
    		v3 = v33;
		printf("V1: %d, V2: %d, V3: %d.", v1, v2, v3);
	} else if(v22 < v11 && v11 < v33){
		v1 = v22;
		v2 = v11;
		v3 = v33;
		printf("V1: %d, V2: %d, V3: %d.", v1, v2, v3);
	} else if(v22 < v33 && v33 < v11){
		v1 = v22;
		v2 = v33;
		v3 = v11;
		printf("V1: %d, V2: %d, V3: %d.", v1, v2, v3);
	} else if(v11 < v33 && v33 < v22){
		v1 = v11;
		v2 = v33;
		v3 = v22;
		printf("V1: %d, V2: %d, V3: %d.", v1, v2, v3);
	} else if(v33 < v11 && v11 < v22){
		v1 = v33;
		v2 = v11;
		v3 = v22;
		printf("V1: %d, V2: %d, V3: %d.", v1, v2, v3);
	} else if(v33 < v22 && v22 < v11){
		v1 = v33;
		v2 = v22;
		v3 = v11;
		printf("V1: %d, V2: %d, V3: %d.", v1, v2, v3);
	}
    }
